{
  "name": "first-responder-quick-notes",
  "version": "1.0.0",
  "description": "A fast, offline-first note-taking tool for first responders to capture timestamped notes with optional location and tags.",
  "main": "index.js",

  "scripts": {
    "dev": "concurrently \"npm run dev:front\" \"npm run dev:back\"",
    "dev:front": "npm run dev --prefix frontend",
    "dev:back": "npm run dev --prefix backend",

    "start": "npm run dev:front",
    "test": "echo \"No tests configured\" && exit 0"
  },

  "keywords": [
    "react",
    "typescript",
    "vite",
    "express",
    "first-responders",
    "notes",
    "offline"
  ],

  "author": "David",
  "license": "MIT",
  "type": "commonjs",

  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}