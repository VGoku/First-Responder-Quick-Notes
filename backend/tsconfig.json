/**
 * tsconfig.json (Backend)
 * -----------------------
 * TypeScript configuration for the Express + Node backend.
 * Outputs compiled JS to /dist and enables strict type checking.
 */

{
  "compilerOptions": {
    /* Language + environment */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    /* Project structure */
    "rootDir": "src",
    "outDir": "dist",
    "noEmitOnError": true,

    /* Type safety */
    "strict": true
  }
}